@model leave_mangment.Models.LeaveRequestVM

@{
    ViewData["Title"] = "Details";
}

<h1>Review @Model.RequestingEmplyee.firstName @Model.RequestingEmplyee.lastName 's Leave Request</h1>

<div>
    <h4>LeaveRequestVM</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Model.RequestingEmplyee.firstName @Model.RequestingEmplyee.lastName
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RequestingEmplyee.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LeaveType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LeaveType.Name)
        </dd><dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Approved)
        </dt>
        @if (Model.Approved == true) 
        { 
            <dd class="col-sm-1 alert alert-success">
                Approved
            </dd>
        } @if (Model.Approved == false) 
        { 
            <dd class="col-sm-1 alert alert-danger">
                Reject
            </dd>
        } @if (Model.Approved == null) 
        { 
            <dd class="col-sm-1 alert alert-warning">
               Pending
            </dd>
        }
        
        
        
    </dl>
</div>
<div>
    @if (Model.Approved == null)
    {
        <a asp-action="ApproveRequest" asp-route-id="@Model.Id" class="btn btn-success"><i class="fa fa-check"></i> Approve</a>
        <a asp-action="RejectRequest" asp-route-id="@Model.Id" class="btn btn-danger"><i class="fa fa-remove"></i>Reject</a>
    }

    <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
</div>
